<?xml version="1.0" encoding="UTF-8"?>

<config>

    <!-- 配置线程数 -->
    <poolsize>4</poolsize>

    <!-- 配置数据源根目录 -->
    <source>./doc/创客网页/</source>

    <!-- 配置输出目录 -->
    <output>./doc/result</output>

    <!-- 配置抽取网页判重的日志文件 -->
    <bloomFilter>./doc/extractLog</bloomFilter>

    <!-- 配置地点存放文件 -->
    <places>./doc/places</places>

    <!-- 配置类别目录名及对应的解析类 -->
    <categories>

        <category name="news">
            cn.edu.njnu.infoextract.impl.ExtractNews
        </category>

        <category name="projects">
            cn.edu.njnu.infoextract.impl.ExtractProjects
        </category>

        <category name="incubators">
            cn.edu.njnu.infoextract.impl.incubators.ExtractIncubators
        </category>

        <category name="activities">
            cn.edu.njnu.infoextract.impl.activities.main_process.ExtractActivities
        </category>

    </categories>

    <!-- 配置数据库交互接口 -->
    <interfaces>

        <!-- 提交地点 -->
        <interface type="postPlaceURL">
            http://101.201.143.103:8080/ZC/data/port/putSinglePositionData
        </interface>

        <!-- 提交数据项 -->
        <interface type="postDataURL">
            http://101.201.143.103:8080/ZC/data/port/PutMultiACSData
        </interface>

    </interfaces>

</config>
